= form_for @search_form, :url => books_path(format: :json), remote: true, :html => {:method => :get} do |f|
  = f.search_field :q
  = f.submit "Search", :class => "button submit"

%table{:class => "table"}
  %tr
    %th Title
    %th Reason
    %th Price(税込)
    %th Url
    %th Severity
    %th Howto
    %th Buydate
    %th Country
    %th
    %th
    %th

  -#  - @books.each do |book|
  -#    %tr
  %tbody
    = content_tag_for :tr, @books do |book|
      %td= book.title
      %td= book.reason
      %td= book.price
      %td= book.url 
      %td= book.severity
      %td= book.howto
      %td= book.buydate
      %td= book.country
      %td= link_to 'Show', book
      %td= link_to 'Edit', edit_book_path(book)
      %td= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure?' }

