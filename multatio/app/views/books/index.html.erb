<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Reason</th>
    <th>Price</th>
    <th>Url</th>
    <th>Severity</th>
    <th>Howto</th>
    <th>Buydate</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.reason %></td>
    <td><%= book.price %></td>
    <td><%= book.url %></td>
    <td><%= book.severity %></td>
    <td><%= book.howto %></td>
    <td><%= book.buydate %></td>
    <td><%= book.country %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

